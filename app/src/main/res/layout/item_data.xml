<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    android:background="@color/white"
    app:cardBackgroundColor="@color/gray"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:contentPadding="10dp">

    <RelativeLayout
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <ImageView
            android:id="@+id/btndelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_action_delete" />


        <!--GAMBAR BARANG-->
        <ImageView
            android:id="@+id/gambar_barang"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/btndelete"
            android:src="@drawable/ic_action_image" />

        <!--NAMA BARANG-->
        <TextView
            android:id="@+id/nama_barang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_below="@+id/gambar_barang"
            android:gravity="center"
            android:text="Nama Barang"
            android:textColor="@color/black"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/titleprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama_barang"
            android:text="Harga      : "
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nama_barang"
            android:layout_toRightOf="@+id/titleprice"
            android:text="Rp. xx.xxx"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/titlecat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/harga"
            android:paddingTop="12dp"
            android:text="Catatan   :"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titlecat"
            android:text="Letakkan deskripsi barang disini"
            android:textColor="@color/black"
            android:textSize="16dp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>